{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 400,
      
    "data": {
        "url": "https://raw.githubusercontent.com/WillsonLouisse/Assignment-2/refs/heads/main/A2DataNum.csv"
      },

    "hconcat": [
        {
            "title": "GDP PER CAPITA in Malaysia Per States",
            "width": 480,
            "height": 480,
            
            "mark": {
                "type": "bar",
                "tooltip": true
            },

            "selection": {
                "highlightState": {
                  "type": "single",
                  "fields": ["STATE"],
                  "on": "click"
                }
              },
              
            "encoding": {
                "x": {"field": "STATE", "type": "nominal", 
                "axis":
                    {
                        "title": "State",
                        "labelFont": "Helvetica",         
                        "labelFontSize": 12
                    },
                "sort": "y"

            },
                "y": {"field": "GDP PER CAPITA", "type": "quantitative", "format": ",.0f", 
                "axis":
                    {
                        "title": "GDP PER CAPITA",
                        "labelFont": "Helvetica",         
                        "labelFontSize": 12
                    }
                },
            "color": {
                "condition": {
                  "param": "highlightState",
                  "value": "steelblue"
                },
                "value": "grey" 
              }
            },

        "tooltip": [
                {"field": "STATE", "type": "nominal", "title": "STATE: "},
                {"field": "GDP PER CAPITA", "type": "quantitative", "format": ",.0f", "title": "GDP PER CAPITA: "}
            ]

        },
        


        {
            "title": "GDP NOMINAL in Malaysia Per States",
            "width": 480,
            "height": 480,
            "mark": {
                "type": "bar",
                "tooltip": true
            },

            "selection": {
                "highlightState": {
                  "type": "single",
                  "fields": ["STATE"],
                  "on": "click"
                }
              },

            "encoding": {
                "x": {"field": "STATE", "type": "nominal", 
                "axis":
                {
                    "title": "State",
                    "labelFont": "Helvetica",         
                    "labelFontSize": 12
                },
                "sort": "y"
            },
                "y": {"field": "GDP NOMINAL", "type": "quantitative", "format": ",.0f", 
                "axis":
                {
                    "title": "GDP NOMINAL",
                    "labelFont": "Helvetica",         
                    "labelFontSize": 12
                }
            },
            "color": {
                "condition": {
                  "param": "highlightState",
                  "value": "steelblue"
                },
                "value": "grey"
              }
            },
            "tooltip": [
                {"field": "STATE", "type": "nominal", "title": "STATE: "},
                {"field": "GDP NOMINAL", "type": "quantitative", "format": ",.0f", "title": "GDP NOMINAL: "}
            ]
        }
    ]

}

  