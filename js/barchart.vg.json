{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 400,
      
    "data": {
        "url": "https://raw.githubusercontent.com/WillsonLouisse/Assignment-2/refs/heads/main/A2DataNum.csv"
      },

    "hconcat": [
        {
            "title": {
                "text": "GDP PER CAPITA Per States",
                "fontSize": 20,
                "font": "Ginebra"
              },
            "width": 480,
            "height": 480,
            
            "transform": [
                {"sort": [{"field": "GDP PER CAPITA", "order": "descending"}]}
            ],
            
            "layer": [
                {
            "mark": {
                "type": "bar",
                "tooltip": true
            },

            "selection": {
                "highlightState": {
                  "type": "single",
                  "fields": ["STATE"],
                  "on": "click"
                }
              },
              
            "encoding": {
                "x": {"field": "STATE", "type": "nominal", 
                "axis":
                    {
                        "title": "State",
                        "labelFont": "Helvetica",         
                        "labelFontSize": 12
                    },
                "sort": "y"

            },
                "y": {"field": "GDP PER CAPITA", "type": "quantitative", "format": ",.0f", 
                "axis":
                    {
                        "title": "GDP PER CAPITA",
                        "labelFont": "Helvetica",         
                        "labelFontSize": 12
                    }
                },
            "color": {
                "condition": {
                  "param": "highlightState",
                  "value": "steelblue"
                },
                "value": "grey" 
              }
            },

        "tooltip": [
                {"field": "STATE", "type": "nominal", "title": "STATE: "},
                {"field": "GDP PER CAPITA", "type": "quantitative", "format": ",.0f", "title": "GDP PER CAPITA: "}
            ]
        },
        {
            "mark": {
                "type": "text",
                "align": "left",
                "dx": 5,
                "dy": -5,
                "fontSize": 14,
                "color": "red"
            },
            "encoding": {
                "text": {"field": "GDP PER CAPITA", "type": "quantitative", "format": ",.0f", "title": "Kuala Lumpur: "},
                "x": {"field": "STATE", "type": "nominal"},
                "y": {"field": "GDP PER CAPITA", "type": "quantitative"},
                "opacity": {
                    "condition": {
                        "test": "datum.STATE === 'Kuala Lumpur'", 
                        "value": 1
                    },
                    "value": 0
                }
            }
        }
            ]
        
        
        },
        

        {
            "title": {
                "text": "GDP NOMINAL Per States",
                "fontSize": 20,
                "font": "Ginebra"
            },
            "width": 480,
            "height": 480,
            "mark": {
                "type": "bar",
                "tooltip": true
            },

            "selection": {
                "highlightState": {
                  "type": "single",
                  "fields": ["STATE"],
                  "on": "click"
                }
              },

            "encoding": {
                "x": {"field": "STATE", "type": "nominal", 
                "axis":
                {
                    "title": "State",
                    "labelFont": "Helvetica",         
                    "labelFontSize": 12
                },
                "sort": "y"
            },
                "y": {"field": "GDP NOMINAL", "type": "quantitative", "format": ",.0f", 
                "axis":
                {
                    "title": "GDP NOMINAL",
                    "labelFont": "Helvetica",         
                    "labelFontSize": 12
                }
            },
            "color": {
                "condition": {
                  "param": "highlightState",
                  "value": "steelblue"
                },
                "value": "grey"
              }
            },
            "tooltip": [
                {"field": "STATE", "type": "nominal", "title": "STATE: "},
                {"field": "GDP NOMINAL", "type": "quantitative", "format": ",.0f", "title": "GDP NOMINAL: "}
            ]
        }
    ]

}

  